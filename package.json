{
  "name": "page-mark",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "format": "prettier --write .",
    "dev": "cross-env APP_ENV=dev tsnd --respawn --clear src/index.ts",
    "build": "rimraf ./dist && tsc && npm run copy-html && npm run copy-assets",
    "copy-html": "copyfiles -u 1 ./src/templates/*.html ./dist",
    "copy-assets": "copyfiles -u 0 ./public/**/* ./dist",
    "start": "npm run build && node dist/index.js",
    "prod": "node dist/index.js",
    "prepare": "cd .. && husky install",
    "lint": "eslint src/**",
    "lint-fix": "eslint src/** --fix",
    "prisma-dev": "node --env-file .env.dev npx prisma migrate dev",
    "local": "npx prisma migrate reset --force && npx prisma generate && npm run dev --env-file .env.dev"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@prisma/client": "~6.1.0",
    "axios": "^1.7.9",
    "celebrate": "~15.0.3",
    "compression": "~1.7.5",
    "cors": "~2.8.5",
    "cross-env": "^7.0.3",
    "dotenv": "^16.4.7",
    "express": "~4.21.2",
    "express-useragent": "^1.0.15",
    "helmet": "^8.0.0",
    "joi": "^17.13.3",
    "multer": "~1.4.5-lts.1",
    "pdf-lib": "~1.17.1",
    "reflect-metadata": "^0.2.2",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "tsyringe": "~4.8.0",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/express-useragent": "^1.0.5",
    "@types/multer": "^1.4.12",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.7",
    "@types/winston": "^2.4.4",
    "husky": "^9.1.7",
    "prettier": "^3.4.2",
    "prisma": "^6.1.0",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.7.2"
  }
}
